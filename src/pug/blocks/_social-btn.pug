mixin social-btn(data, modifier)
  - const iconParams = {instagram: {width: 14, height: 14}, telegram: {width: 19, height: 19}, vk: {width: 17, height: 17}, email: {width: 19, height: 19}, phone: {width: 18, height: 18}}

  .social-btn(class=modifier)
    a.social-btn__link(href=data.href target=data.target rel=data.rel class='social-btn__link_' + data.name)
      svg.social-btn__svg(width=iconParams[data.name].width height=iconParams[data.name].height)
        use(xmlns:xlink='http://www.w3.org/1999/xlink' xlink:href='images/svg/sprite.svg#' + data.name)
      span.social-btn__label.visually-hidden!=data.label